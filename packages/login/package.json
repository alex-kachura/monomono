{
  "name": "@oneaccount/login",
  "private": true,
  "version": "0.1.0",
  "description": "The login Node/React app",
  "scripts": {
    "lint": "eslint .",
    "start": "bin/start",
    "start:dev": "NODE_ENV=development BABEL_ENV=node NODE_CONFIG_DIR=./src/config babel-watch ./src/index.js",
    "start:prod": "NODE_ENV=production NODE_CONFIG_DIR=./dist/config node ./dist/index.js",
    "test": "NODE_CONFIG_DIR=./src/config BABEL_ENV=test jest --coverage",
    "test:watch": "NODE_CONFIG_DIR=./src/config BABEL_ENV=test jest --watch",
    "build:dev": "NODE_ENV=development npm run clean && webpack && npm run build-server",
    "build:prod": "NODE_ENV=production npm run clean && webpack && npm run build-server",
    "build-server": "BABEL_ENV=node babel ./src -d ./dist --ignore ./src/client,./src/vendor,test.js --copy-files",
    "clean": "rm -rf dist/",
    "snyk:test": "snyk test",
    "snyk:protect": "snyk protect",
    "snyk:wizard": "snyk wizard",
    "docker": "docker-compose up",
    "npm_token": "NPM_AUTH_TOKEN=$(grep 'nexus.ourtesco.com/repository/tesco-npm/' ~/.npmrc | cut -d '=' -f 2 | head -1)",
    "docker-build": "npm run npm_token -- docker-compose build",
    "docker-clean": "docker system prune",
    "docker-test": "npm run npm_token -- docker-compose -f docker-compose.test.yml build && docker-compose -f docker-compose.test.yml up -d app nginx; sleep 5; docker-compose -f docker-compose.test.yml up",
    "prepare": "npm run snyk:protect",
    "update-beans": "update-beans"
  },
  "dependencies": {
    "@beans/appbar": "^14.2.3",
    "@beans/breadcrumb": "^14.2.3",
    "@beans/button": "^14.2.3",
    "@beans/dropdown": "^14.2.3",
    "@beans/footer": "^14.2.3",
    "@beans/form-group": "^14.2.3",
    "@beans/foundation": "^14.1.3",
    "@beans/grid": "^14.1.3",
    "@beans/header": "^14.1.3",
    "@beans/helpers": "^14.1.3",
    "@beans/icon": "^14.2.3",
    "@beans/input": "^14.1.3",
    "@beans/input-group": "^14.2.3",
    "@beans/label": "^14.1.3",
    "@beans/link": "^14.2.3",
    "@beans/masthead": "^14.2.3",
    "@beans/notification": "^14.2.3",
    "@beans/primary-navigation": "^14.2.3",
    "@beans/tesco-modern": "^14.1.1",
    "@beans/theme": "^14.2.2",
    "@beans/typography": "^14.1.3",
    "@oneaccount/auth-utils": "0.1.0",
    "@oneaccount/form-validation": "0.5.0",
    "@oneaccount/node-logger-whitelists": "1.3.3",
    "@oneaccount/react-foundations": "^0.12.0",
    "@web-foundations/express-identity-validate": "^1.0.0",
    "@web-foundations/express-locale-middleware": "^1.0.4",
    "@web-foundations/express-traceid": "^0.2.0",
    "@web-foundations/express-user-segmentation": "^0.1.0",
    "@web-foundations/logger": "1.2.0",
    "@web-foundations/service-identity": "^3.19.0",
    "accept-language": "^3.0.18",
    "aes256": "^1.0.4",
    "ajv-errors": "^1.0.1",
    "body-parser": "^1.18.3",
    "classnames": "^2.2.6",
    "config": "^1.31.0",
    "connected-react-router": "^4.5.0",
    "cookie-parser": "^1.4.3",
    "core-js": "^2.5.7",
    "csurf": "^1.9.0",
    "express": "^4.16.3",
    "formik": "^1.5.1",
    "helmet": "^3.13.0",
    "history": "^4.7.2",
    "hoist-non-react-statics": "^3.3.0",
    "immutable": "^3.8.2",
    "isomorphic-fetch": "^2.2.1",
    "js-yaml": "^3.12.0",
    "lodash": "^4.17.11",
    "memoize-one": "^5.0.0",
    "mobile-detect": "^1.4.3",
    "node-polyglot": "^2.2.2",
    "polished": "^2.3.0",
    "prop-types": "^15.6.2",
    "react": "^16.8.4",
    "react-document-title": "^2.0.3",
    "react-dom": "^16.8.4",
    "react-redux": "^5.0.7",
    "react-router": "^4.3.1",
    "react-router-config": "^1.0.0-beta.4",
    "react-router-dom": "^4.3.1",
    "react-testing-library": "^5.9.0",
    "redux": "^4.0.0",
    "redux-devtools-extension": "^2.13.7",
    "redux-immutable": "^4.0.0",
    "redux-mock-store": "^1.5.3",
    "redux-thunk": "^2.3.0",
    "reselect": "^4.0.0",
    "serialize-javascript": "^1.5.0",
    "styled-components": "^4.0.3",
    "uuid-validate": "0.0.3",
    "winston": "^2.4.4",
    "yup": "^0.26.10"
  },
  "devDependencies": {
    "@beans/cli": "^14.1.0",
    "@web-foundations/eslint-config-base": "^1.1.3",
    "@web-foundations/eslint-config-react": "^1.1.3",
    "assets-webpack-plugin": "^3.9.6",
    "autoprefixer": "^8.6.5",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^7.1.5",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.26.2",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "babel-watch": "^2.0.7",
    "concurrently": "^3.6.1",
    "copy-webpack-plugin": "^4.5.2",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.10.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^2.6.2",
    "eslint-plugin-react": "^7.11.1",
    "fetch-mock": "^6.5.2",
    "file-loader": "^1.1.11",
    "husky": "^1.0.0-rc.14",
    "imagemin-lint-staged": "^0.3.0",
    "jest": "^23.6.0",
    "jest-dom": "^3.1.3",
    "jest-fetch-mock": "^1.6.5",
    "jest-immutable-matchers": "^2.0.1",
    "jsdom": "^11.12.0",
    "lint-staged": "^7.2.2",
    "mini-css-extract-plugin": "^0.4.2",
    "node-sass": "^4.9.3",
    "postcss-loader": "^2.1.6",
    "prettier": "^1.14.2",
    "pretty-quick": "^1.8.0",
    "sass-loader": "^7.1.0",
    "script-loader": "^0.7.2",
    "snapshot-diff": "^0.5.1",
    "snyk": "^1.95.3",
    "stats-webpack-plugin": "^0.6.2",
    "style-loader": "^0.21.0",
    "webpack": "^4.25.1",
    "webpack-cli": "^3.1.2",
    "webpack-merge": "^4.1.4"
  },
  "browserslist": [
    "Firefox >= 20",
    "Chrome >= 25",
    "Safari >= 7",
    "ie >= 8",
    "android > 3",
    "samsung > 2",
    "Last 5 versions"
  ],
  "snyk": true,
  "jest": {
    "setupFiles": [
      "./test/jest.config.js"
    ],
    "setupTestFrameworkScriptFile": "./test/jest.framework.setup.js",
    "testMatch": [
      "**/src/**/*test.js"
    ],
    "testPathIgnorePatterns": [
      "/src/config/",
      "/integration/config/",
      "/node_modules/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint && npm test"
    }
  },
  "lint-staged": {
    "*.{js,jsx,json}": [
      "pretty-quick --staged",
      "eslint src/ --fix",
      "git add"
    ],
    "*.{png,jpeg,jpg,gif,svg}": [
      "imagemin-lint-staged",
      "git add"
    ]
  }
}
