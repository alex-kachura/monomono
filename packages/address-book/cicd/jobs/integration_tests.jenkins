#!/usr/bin/env groovy

pipelineJob('address-book_integration_tests') {
	definition {
		displayName('[address-book] Integration tests')
		logRotator {
			numToKeep(10)
			daysToKeep(30)
			artifactDaysToKeep(7)
			artifactNumToKeep(1)
		}
		cpsScm {
			scm {
				git {
					remote {
						name('origin')
						url('git@github.dev.global.tesco.org:oneaccount/address-book.git')
						credentials('address-book-deploy-key')
					}
					branch('master')
				}
			}
			scriptPath('cicd/pipelines/integration_tests.groovy')
		}
	}
  triggers {
    scm('* * * * *')
  }
}
