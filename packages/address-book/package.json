{
  "name": "@oneaccount/address-book",
  "private": true,
  "version": "0.1.0",
  "description": "The address book Node/React app",
  "scripts": {
    "lint": "pretty-quick --staged && eslint . --fix",
    "lint:prod": "eslint .",
    "start": "bin/start",
    "start:dev": "NODE_ENV=development BABEL_ENV=node NODE_CONFIG_DIR=./src/config babel-watch ./src/index.js",
    "start:prod": "NODE_ENV=production NODE_CONFIG_DIR=./dist/config node ./dist/index.js",
    "test": "NODE_CONFIG_DIR=./src/config BABEL_ENV=test jest --coverage",
    "test:watch": "NODE_CONFIG_DIR=./src/config BABEL_ENV=test jest --watch",
    "build:dev": "NODE_ENV=development npm run clean && webpack && npm run build-server",
    "build:prod": "NODE_ENV=production npm run clean && webpack && npm run build-server",
    "build-server": "BABEL_ENV=node babel ./src -d ./dist --ignore ./src/client,./src/vendor,test.js --copy-files",
    "clean": "rm -rf dist/",
    "snyk:test": "snyk test",
    "snyk:protect": "snyk protect",
    "snyk:wizard": "snyk wizard",
    "docker": "docker-compose up",
    "npm_token": "NPM_AUTH_TOKEN=$(grep 'nexus.ourtesco.com/repository/tesco-npm/' ~/.npmrc | cut -d '=' -f 2 | head -1)",
    "docker-build": "npm run npm_token -- docker-compose build",
    "docker-clean": "docker system prune",
    "docker-test": "npm run npm_token -- docker-compose -f docker-compose.test.yml build && docker-compose -f docker-compose.test.yml up -d app nginx; sleep 5; docker-compose -f docker-compose.test.yml up",
    "prepare": "npm run snyk:protect",
    "analyzer": "webpack -p && webpack --profile --json > ./dist/public/stats.json && webpack-bundle-analyzer ./dist/public/stats.json",
    "update-beans": "update-beans"
  },
  "dependencies": {
    "@beans/appbar": "^14.17.0",
    "@beans/breadcrumb": "^14.17.0",
    "@beans/button": "^14.17.0",
    "@beans/dropdown": "^14.17.0",
    "@beans/footer": "^14.18.0",
    "@beans/form-group": "^14.17.0",
    "@beans/foundation": "^14.15.0",
    "@beans/grid": "^14.15.0",
    "@beans/header": "^14.16.0",
    "@beans/helpers": "^14.14.0",
    "@beans/icon": "^14.17.0",
    "@beans/input": "^14.15.0",
    "@beans/input-group": "^14.17.0",
    "@beans/label": "^14.15.0",
    "@beans/link": "^14.17.0",
    "@beans/masthead": "^14.18.0",
    "@beans/notification": "^14.17.0",
    "@beans/primary-navigation": "^14.17.0",
    "@beans/tesco-modern": "^14.13.5",
    "@beans/theme": "^14.17.0",
    "@beans/tooltip": "^14.17.0",
    "@beans/typography": "^14.15.0",
    "@oneaccount/auth-utils": "0.1.0",
    "@oneaccount/node-logger-whitelists": "^1.4.2",
    "@oneaccount/react-foundations": "^0.22.0",
    "@web-foundations/express-identity-validate": "^1.0.0",
    "@web-foundations/express-locale-middleware": "^1.0.4",
    "@web-foundations/express-traceid": "^0.2.0",
    "@web-foundations/express-user-segmentation": "^0.1.0",
    "@web-foundations/logger": "^1.4.0",
    "@web-foundations/service-address": "3.21.0",
    "@web-foundations/service-contact": "3.21.4",
    "@web-foundations/service-identity": "3.21.0",
    "accept-language": "~3.0.18",
    "acorn": "~6.1.1",
    "aes256": "~1.0.4",
    "ajv-errors": "~1.0.1",
    "body-parser": "~1.19.0",
    "classnames": "~2.2.6",
    "config": "~3.1.0",
    "cookie-parser": "~1.4.3",
    "core-js": "^2.6.9",
    "csurf": "~1.10.0",
    "express": "~4.17.1",
    "formik": "~1.5.7",
    "helmet": "~3.18.0",
    "history": "~4.9.0",
    "hoist-non-react-statics": "~3.3.0",
    "isomorphic-fetch": "~2.2.1",
    "js-yaml": "~3.13.1",
    "lodash": "~4.17.11",
    "memoize-one": "~5.0.4",
    "mobile-detect": "~1.4.3",
    "node-polyglot": "~2.3.0",
    "polished": "~3.4.1",
    "prop-types": "~15.7.1",
    "react": "~16.8.4",
    "react-document-title": "~2.0.3",
    "react-dom": "~16.8.4",
    "react-router": "^5.0.1",
    "react-router-config": "^5.0.1",
    "react-router-dom": "^5.0.1",
    "serialize-javascript": "~1.7.0",
    "styled-components": "~4.3.2",
    "winston": "~2.3.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0",
    "@babel/core": "^7.0.0",
    "@babel/preset-env": "^7.0.0",
    "@babel/preset-react": "^7.0.0",
    "@beans/cli": "^14.13.5",
    "@testing-library/react": "^8.0.1",
    "@web-foundations/eslint-config-base": "~1.1.3",
    "@web-foundations/eslint-config-react": "~1.1.3",
    "assets-webpack-plugin": "~3.9.6",
    "autoprefixer": "~9.6.0",
    "babel-eslint": "^10.0.2",
    "babel-jest": "^24.8.0",
    "babel-loader": "^8.0.6",
    "babel-watch": "7.0.0",
    "concurrently": "~4.1.0",
    "copy-webpack-plugin": "~5.0.3",
    "css-loader": "~3.0.0",
    "eslint": "~5.16.0",
    "eslint-config-prettier": "~5.0.0",
    "eslint-plugin-import": "~2.17.3",
    "eslint-plugin-prettier": "~3.1.0",
    "eslint-plugin-react": "~7.13.0",
    "file-loader": "~4.0.0",
    "husky": "2.4.1",
    "imagemin-lint-staged": "~0.4.0",
    "jest": "~24.8.0",
    "jest-dom": "~3.5.0",
    "jest-fetch-mock": "~2.1.2",
    "jsdom": "~15.1.1",
    "lint-staged": "8.2.1",
    "mini-css-extract-plugin": "~0.7.0",
    "postcss-loader": "~3.0.0",
    "prettier": "~1.18.2",
    "pretty-quick": "~1.11.0",
    "script-loader": "~0.7.2",
    "snapshot-diff": "~0.5.1",
    "snyk": "~1.179.0",
    "source-map-loader": "~0.2.4",
    "stats-webpack-plugin": "~0.7.0",
    "style-loader": "~0.23.0",
    "webpack": "~4.35.0",
    "webpack-bundle-analyzer": "^3.3.2",
    "webpack-cli": "~3.3.4",
    "webpack-merge": "~4.2.1"
  },
  "browserslist": [
    "Firefox >= 20",
    "Chrome >= 25",
    "Safari >= 7",
    "ie >= 8",
    "android > 3",
    "samsung > 2",
    "Last 5 versions"
  ],
  "snyk": true,
  "jest": {
    "modulePathIgnorePatterns": [
      "<rootDir>/.*/__mocks__"
    ],
    "setupFiles": [
      "<rootDir>/test/jest.config.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/test/jest.framework.setup.js"
    ],
    "testMatch": [
      "**/src/**/*test.js"
    ],
    "testPathIgnorePatterns": [
      "/config/",
      "/node_modules/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint:prod && npm test"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "prettier --write",
        "eslint --fix",
        "git add"
      ]
    }
  }
}
